
@{
    ViewBag.Title = "Nik";
    Layout = "~/Views/_LayoutPage1.cshtml";
}


<section id="home" class="w3l-banner py-5">
    <div class="">

    </div>
    <div class="banner-content">
        <div class="container pt-5 pb-md-4">
            <h2 class="mb-lg-25 mb-3 title"><span class="typed-text"></span><span>Cek NIK Pasien</span></h2>

            <div class="row align-items-center">

                <div class="col-md-6 pt-md-0 pt-4">

                    <div class="container">
                        <p class="lead text-danger">@ViewBag.error</p>
                        <nav class="navbar navbar-expand-lg stroke px-0">
                            @using (Html.BeginForm("Nik", "User", FormMethod.Get))
                            {
                                <div class="row">
                                    <div class="col-10">@Html.TextBox("search", null, new { @class = "form-control", @autofocus = "", @required = "", @placeholder = "NIK Pasien" })</div>
                                    <div class="col-1"> <button type="submit" value="Search" class="btn search-btn"><i class="fa fa-search" aria-hidden="true"></i></button></div>

                                </div>


                            }
                            <!-- //search button -->
                        </nav>
                    </div>
                    <!-- //search button -->


                    <div class="mt-md-8 mt-4 mb-lg-0 mb-4">
                        <table class="table">
                            <tr>

                                <th>
                                    No
                                </th>
                                <th>
                                    NIK
                                </th>
                                <th>
                                    Nama
                                </th>
                                <th>
                                    Alamat
                                </th>
                                <th>
                                    Jenis Kelamin
                                </th>

                            </tr>

                            @foreach (var item in ViewBag.nik)
                            {
                                <tr>
                                    <td>
                                        @item.id
                                    </td>
                                    <td>
                                        @item.nik
                                    </td>
                                    <td>
                                        @item.nama
                                    </td>
                                    <td>
                                        @item.alamat
                                    </td>
                                    <td>
                                        @item.jenis_kelamin
                                    </td>

                                </tr>
                            }


                        </table>

                    </div>

                </div>

            </div>
        </div>
    </div>
</section>


